extends layout

block content
  include partials/nav

  main.create-post
    h1 New WebVR Post
    a(class='button' href='https://glitch.com/edit/#!/remix/cheerful-suggestion' target='_blank')
      img(src='viz/starthere_btn.png')
    form(action="/post/create-post/" method="post")
      label Title
      input(type="text" name="title")
      label VR HTML Hash &nbsp;
        img(src='viz/info-icon.png', width='30', title='Upload the html file containing your scene to IPFS, then copy the FULL path, NOT the shortened URL.')
      input#vrHash(type="text" name="vrHash")
      label 360° Image Hash &nbsp;
        img(src='viz/info-icon.png', width='30', title='Take a 360° photo from inside your scene by pressing SHIFT + CTL + ALT + S, upload to IPFS and copy the FULL path. This will become the preview for your post in VR.')
      input(type="text" name="Hash360")
      label Blog Image Hash &nbsp;
        img(src='viz/info-icon.png', width='30', title='Take a traditional 16x9 photo by pressing CTL + ALT + S, upload to IPFS and copy the FULL path. This will be the main photo for your Steem blog post.')
      input(type="text" name="image")
      label Blog Post
      textarea(name="post")
      label Tags separated by commas, all lowercase, no spaces
      input(type="text" name="tags")
      label
      button.btn.btn-primary(type="submit") Post to STEEM
      p Posting as #{name}
      p #{msg}
