extends layout

block content
  include partials/nav

  main.create-post
    h1 Create Post
    form(action="/post/create-post/" method="post")
      label Title
      input(type="text" name="title")
      label Blog Post
      textarea(name="post")
      label Tags
      input(type="text" name="tags")
      label VR IPFS Hash
      input(type="text" name="vrHash")
      button.btn.btn-primary(type="submit") Submit
      p Posting as #{name}
      p #{msg}
