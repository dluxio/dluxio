extends layout

block content
  include partials/nav

  main.create-post
    h1 New WebVR Post
    form(action="/")
      fieldset
        label Upload your dlux file
        input#dluxfile(type="file" name="file")
        button.btn.btn-primary(type="button" onclick="upload()") Upload to IPFS
    form(action="/post/create-post/" method="post")
      label Title
      input(type="text" name="title")
      label VR IPFS Hash
      input#vrHash(type="text" name="vrHash")
      label 360 Hash
      input(type="text" name="Hash360")
      label Image Hash
      input(type="text" name="image")
      label Blog Post
      textarea(name="post")
      label Tags separated by commas, all lowercase, now spaces
      input(type="text" name="tags")
      label
      button.btn.btn-primary(type="submit") Post to STEEM
      p Posting as #{name}
      p #{msg}
